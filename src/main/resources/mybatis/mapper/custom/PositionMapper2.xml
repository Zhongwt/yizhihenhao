<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yzhh.backstage.api.dao.mapper.custom.PositionMapper2">
  <resultMap id="BaseResultMap" type="com.yzhh.backstage.api.entity.Position">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="last_access" jdbcType="BIGINT" property="lastAccess" />
    <result column="company_id" jdbcType="BIGINT" property="companyId" />
    <result column="release_date" jdbcType="BIGINT" property="releaseDate" />
    <result column="type" jdbcType="VARCHAR" property="type" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="province" jdbcType="VARCHAR" property="province" />
    <result column="city" jdbcType="VARCHAR" property="city" />
    <result column="area" jdbcType="VARCHAR" property="area" />
    <result column="perple_num" jdbcType="INTEGER" property="perpleNum" />
    <result column="seduction" jdbcType="VARCHAR" property="seduction" />
    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="education" jdbcType="VARCHAR" property="education" />
    <result column="address" jdbcType="VARCHAR" property="address" />
    <result column="work_type" jdbcType="VARCHAR" property="workType" />
    <result column="internship_time" jdbcType="VARCHAR" property="internshipTime" />
    <result column="work_time" jdbcType="VARCHAR" property="workTime" />
    <result column="correction_chance" jdbcType="VARCHAR" property="correctionChance" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="deadline" jdbcType="BIGINT" property="deadline" />
    <result column="per_diem" jdbcType="VARCHAR" property="perDiem" />
    <result column="is_pressing" jdbcType="BIT" property="isPressing" />
    <result column="work_date" jdbcType="VARCHAR" property="workDate" />
    <result column="option_note" jdbcType="VARCHAR" property="optionNote" />
  </resultMap>
	<sql id="condition_sql">
		p.company_id = c.id
		<if test="searchKey">
			AND (p.name like CONCAT(CONCAT('%',#{searchKey},'%')) or c.name like CONCAT(CONCAT('%',#{searchKey},'%')))
		</if>
		<if test="status">
			AND p.status = #{status}
		</if>
		<if test="deadLineStar != null">
			AND  p.deadline  &gt; #{deadLineStar}
		</if>
		<if test="deadLineEnd != null">
			AND  p.deadline  &lt; #{deadLineEnd}
		</if>
		<if test="companyId != null">
			AND  p.company_id  = #{companyId}
		</if>
		<if test="city != null">
			AND  p.city  = #{city}
		</if>
		<if test="perDiem != null">
			AND  p.per_diem  = #{perDiem}
		</if>
		<if test="workTime != null">
			AND  p.work_time  = #{workTime}
		</if>
		<if test="workDate != null">
			AND  p.work_date  = #{workDate}
		</if>
		<if test="education != null">
			AND  p.education  = #{education}
		</if>
		<if test="correctionChance != null">
			AND  p.correction_chance  = #{correctionChance}
		</if>
		<if test="type != null">
			AND  p.type  = #{type}
		</if>
		<if test="name != null">
			AND  p.name  = #{name}
		</if>
		<if test="workType != null">
			AND  p.work_type  = #{workType}
		</if>
		<if test="workTypes == '寒暑假工'">
			AND  (p.work_type  = "寒假工" or p.work_type  = "暑假工")
		</if>
		<if test="isPressing != null">
			AND  p.is_pressing  = #{isPressing}
		</if>
		<if test="positionIds != null and positionIds.size > 0">
			<foreach collection="positionIds" open=" AND p.id in (" close=")"
				item="positionId" separator=",">
				#{positionId}
			</foreach>
		</if>
		<if test="companyName">
			AND c.name like CONCAT(CONCAT('%',#{companyName},'%'))
		</if>
	</sql>
	
	<!-- 分页查询日志 -->
 	<select id="queryByPage" resultMap="BaseResultMap">
 		SELECT
			p.*
		FROM
			position p,
			company c
		<where>
			<include refid="condition_sql"></include>
		</where>
		order by last_access desc 
		LIMIT #{starNum},#{size}
 	</select>
 	
 	<!-- 分页查询日志 -->
 	<select id="countByPage" resultType="Long">
 		SELECT
			count(p.id)
		FROM
			position p,
			company c
		<where>
			<include refid="condition_sql"></include>
		</where>
 	</select>
 	
 	
 	<!-- 通过职位获取城市 -->
 	<select id="getCityForPosition" resultType="String">
 		SELECT DISTINCT
			city
		FROM
			position
 	</select>
 
</mapper>